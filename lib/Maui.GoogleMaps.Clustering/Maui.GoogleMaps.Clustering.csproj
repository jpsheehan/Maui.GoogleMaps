<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Nullable>enable</Nullable>
	  <TargetFrameworks>net8.0;net8.0-android;net8.0-ios</TargetFrameworks>
	  <UseMaui>true</UseMaui>
	  <SingleProject>true</SingleProject>
	  <ImplicitUsings>enable</ImplicitUsings>
	  <SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'ios'">14.2</SupportedOSPlatformVersion>
	  <SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'android'">21.0</SupportedOSPlatformVersion>
	  <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
	  <PackageId>Sheehan.Maui.GoogleMaps.Clustering</PackageId>
	  <Title>Maui.GoogleMaps.Clustering</Title>
	  <PackageVersion>6.0.2</PackageVersion>
	  <PackageReleaseNotes>
# 6.0.2
- Fix iOS crash caused by null reference exception
	  </PackageReleaseNotes>
	  <Authors>themronion,jpsheehan</Authors>
	  <Copyright>Copyright 2022-2024</Copyright>
	  <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
	  <PackageReadmeFile>README.md</PackageReadmeFile>
	  <PackageIcon>logo.png</PackageIcon>
	  <RepositoryUrl>https://github.com/jpsheehan/Maui.GoogleMaps</RepositoryUrl>
	  <PackageProjectUrl>https://github.com/jpsheehan/Maui.GoogleMaps</PackageProjectUrl>
	  <PackageRequireLicenseAcceptance>False</PackageRequireLicenseAcceptance>
	  <Description>Helper library for Sheehan.Maui.GoogleMaps to support clustering</Description>
	  <PackageTags>maui maps mauimaps maui.maps mauigooglemaps maui.googlemaps google googlemap clustering</PackageTags>
  </PropertyGroup>

	<ItemGroup>
		<None Include="..\..\LICENSE.txt" Pack="True" PackagePath="" />
		<None Include="..\..\README.md" Pack="True" PackagePath="" />
		<None Include="..\..\logo.png" Pack="True" PackagePath="" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Maui.Controls" Version="8.0.61" />
	</ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)' != 'net8.0'">
		<PackageReference Include="Xamarin.Google.Maps.Utils" Version="1.3.9" />
	</ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Maui.GoogleMaps\Maui.GoogleMaps.csproj" />
  </ItemGroup>

</Project>
